<% layout(layoutPath) %>
<div class="row">
  <div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
      <li class="active"><a >Account Settings</a></li>
      <li><a href="/editsetting">Profile Information</a></li>
    </ul>
  </div>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
   <% include ../shared/alert_messages.ejs %>
    <h1 class="page-header">Account Settings</h1>
    <div class="row placeholders">
      <div class="col-md-9 col-md-offset-1" style = "margin-bottom: 10px">
        <h4>Change Account Info </h4>
      </div>
      <div class="col-md-9 col-md-offset-1">
        <form class="form-horizontal" role="form" method = "post" action ="/account">
          <div class="form-group">
            <label for="inputusername" class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
              <input name = "username" type="text" class="form-control" id="inputEmail3" value="<%= user.username %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input name = "email" type="email" class="form-control" id="inputEmail3" value="<%= user.email %>">
            </div>
          </div>

          <div class="form-group">
            <label for="inputFirstName" class="col-sm-2 control-label">First Name:</label>
            <div class="col-sm-10">
              <input name ="firstName" type="text" class="form-control" id="inputEmail3" value="<%= user.firstName %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Last Name:</label>
            <div class="col-sm-10">
              <input name = "lastName" type="text" class="form-control" id="inputEmail3" value="<%= user.lastName %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">New Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword3" name ="password" placeholder="*********">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Retype New Password</label>
            <div class="col-sm-10">
              <input  name="passwordConfirmation" type="password" class="form-control" id="inputPassword3" placeholder="*********">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Current Password *</label>
            <div class="col-sm-10">
              <input  name="currentPassword" type="password" class="form-control" id="inputPassword3" placeholder="*********">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary">Change</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <% include ../shared/footer %>
  </div>
</div>